<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="API Regression Test Suite">

	<listeners>
		<listener class-name="com.aventstack.chaintest.plugins.ChainTestListener" />
	</listeners>

	<test name="GOREST API Test - Get User">
		<classes>
			<class name="com.qa.api.gorest.tests.GetUserTest" />
		</classes>
	</test>

	<test name="GOREST API Test - Create User">
		<classes>
			<class name="com.qa.api.gorest.tests.CreateUserTest" />
		</classes>
	</test>

	<test name="GOREST API Test - Update User">
		<classes>
			<class name="com.qa.api.gorest.tests.DeleteUserTest" />
		</classes>
	</test>

	<test name="GOREST API Test - Delete User">
		<classes>
			<class name="com.qa.api.gorest.tests.UpdateUserTest" />
		</classes>
	</test>
</suite>